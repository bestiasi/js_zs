{% extends 'layout.twig' %}
{% block title %}Login{% endblock %}

{% block content %}
    <div class="col-md-4 col-md-offset-4">

        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                {#{% if error %}
                    <div class="bg-danger text-center"></div>
                {% endif %}#}
                <form action="" method="post">
                    <input type="hidden" name="_csrf_token" value="{#{{ csrf_token }}#}" />

                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="" required="required" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" />
                    </div>


                    <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="Login" />
                </form>

            </div>
        </div>
    </div>
{% endblock %}